<?import javafx.scene.layout.VBox?>

<VBox spacing="15" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.StageController">

	<padding>
		<Insets bottom="20" left="20" right="20" top="20" />
	</padding>

	<!-- Titre -->
	<Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="ðŸ“… Gestion des Stages" />

	<!-- Formulaire -->
	<GridPane hgap="10" vgap="10">
		<columnConstraints>
			<ColumnConstraints prefWidth="120" />
			<ColumnConstraints prefWidth="300" />
		</columnConstraints>

		<!-- Ligne 1 : Sujet -->
		<Label text="Sujet :" GridPane.columnIndex="0" GridPane.rowIndex="0" />
		<TextField fx:id="txtSujet" promptText="Sujet du stage" GridPane.columnIndex="1" GridPane.rowIndex="0" />

		<!-- Ligne 2 : Encadrant -->
		<Label text="Encadrant :" GridPane.columnIndex="0" GridPane.rowIndex="1" />
		<TextField fx:id="txtEncadrant" promptText="Nom de l'encadrant" GridPane.columnIndex="1" GridPane.rowIndex="1" />

		<!-- Ligne 3 : Dates -->
		<Label text="Date dÃ©but :" GridPane.columnIndex="0" GridPane.rowIndex="2" />
		<DatePicker fx:id="dateDebut" GridPane.columnIndex="1" GridPane.rowIndex="2" />

		<Label text="Date fin :" GridPane.columnIndex="0" GridPane.rowIndex="3" />
		<DatePicker fx:id="dateFin" GridPane.columnIndex="1" GridPane.rowIndex="3" />

		<!-- Ligne 4 : Stagiaire -->
		<Label text="Stagiaire :" GridPane.columnIndex="0" GridPane.rowIndex="4" />
		<ComboBox fx:id="comboStagiaire" promptText="SÃ©lectionner un stagiaire" GridPane.columnIndex="1" GridPane.rowIndex="4" />

		<!-- Ligne 5 : Entreprise -->
		<Label text="Entreprise :" GridPane.columnIndex="0" GridPane.rowIndex="5" />
		<ComboBox fx:id="comboEntreprise" promptText="SÃ©lectionner une entreprise" GridPane.columnIndex="1" GridPane.rowIndex="5" />
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
	</GridPane>

	<!-- Boutons d'actions -->
	<HBox spacing="10">
		<Button onAction="#handleAjouter" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;" text="âž• Ajouter" />
		<Button onAction="#handleModifier" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold;" text="âœï¸ Modifier" />
		<Button onAction="#handleSupprimer" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" text="ðŸ—‘ï¸ Supprimer" />
		<Button onAction="#handleVider" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" text="ðŸ—˜ Vider" />
	</HBox>

	<!-- Tableau des stages -->
	<Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Liste des Stages :" />

	<TableView fx:id="tableStages" VBox.vgrow="ALWAYS">
		<columns>
			<TableColumn fx:id="colId" prefWidth="50" text="ID" />
			<TableColumn fx:id="colSujet" prefWidth="200" text="Sujet" />
			<TableColumn fx:id="colEncadrant" prefWidth="150" text="Encadrant" />
			<TableColumn fx:id="colDateDebut" prefWidth="100" text="Date DÃ©but" />
			<TableColumn fx:id="colDateFin" prefWidth="100" text="Date Fin" />
			<TableColumn fx:id="colStagiaire" prefWidth="150" text="Stagiaire" />
			<TableColumn fx:id="colEntreprise" prefWidth="150" text="Entreprise" />
		</columns>
		<columnResizePolicy>
			<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
		</columnResizePolicy>
	</TableView>
	
	<!-- Bouton Retour -->
	<HBox alignment="CENTER_RIGHT">
		<Button onAction="#handleRetour" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" text="â¬… Retour" />
	</HBox>


</VBox>
